{
    "name": "indy2kro/php-epub",
    "type": "library",
    "description": "A PHP library for processing EPUB files.",
    "keywords" : [
        "epub",
        "library"
    ],
    "homepage" : "https://github.com/indy2kro/php-epub",
    "license" : "GPL-2.0",
    "require": {
        "php": ">=8.2",
        "ext-xml": "*",
        "ext-zip": "*"
    },
    "autoload": {
        "psr-4": {
            "PhpEpub\\": "src/"
        }
    },
    "require-dev": {
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-mbstring": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "squizlabs/php_codesniffer" : ">=3.7",
        "phpunit/phpunit" : "^11 || ^12",
        "phpstan/phpstan": "^2",
        "phpstan/phpstan-phpunit": "^2",
        "rector/rector": "^2",
        "tecnickcom/tcpdf": "^6.8",
        "dompdf/dompdf": "^3.1"
    },
    "suggest": {
        "dompdf/dompdf": "Required for PDF generation using Dompdf.",
        "tecnickcom/tcpdf": "Required for PDF generation using TCPDF."
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
